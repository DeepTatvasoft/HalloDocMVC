@{
    ViewData["Title"] = "View Document";
    Layout = "_PatientDashboard";
}
@model HalloDoc.ViewModel.PatientDashboardedit
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
<Partial name="_Notification" />
<div class="tab-content mt-4" id="myTabContent">
    <div class="tab-pane fade show active" id="home-tab-pane" role="tabpanel" aria-labelledby="home-tab"
         tabindex="0">
        <div class="container-fluid mt-5 dashboard" style="width: 90%;">
            <div class="d-flex justify-content-between">
                <h4>Documents</h4>
                <div class="backbtn">
                    <a asp-controller="Dashboard" asp-action="PatientDashboard">
                        <button type="button" class="btn btn-outline-info text-center"><img style="margin-bottom : 2px" src="~/images/image_2024_01_17T04_17_17_757Z.png" height="12px" width="10px">Back</button>
                    </a>
                </div>
            </div>
            <div class="documenthead mt-4 bg-white p-3 rounded">
                <span class="text-body-secondary">Patient Name</span>
                <h5 class="text-info">@HttpContextAccessor.HttpContext.Session.GetString("Username") (@Model.requests.FirstOrDefault(u=>u.Requestid == (Model.requests.FirstOrDefault(m=>m.Userid == Model.User.Userid).Requestid)).Confirmationnumber)</h5>
                <span class="text-body-secondary">Check here for any files that you and doctors of your subsequents requestors have attached for you to review</span>
                <div class="updoc mt-5">
                    <div class="fileselect mt-3 bg-body-secondary">
                        <input asp-for="Upload" type="file" class="file mt-3" id="actual-btn" hidden multiple />
                        <label for="actual-btn" class="filelable"><i class="fa-solid fa-upload me-2"></i>Upload</label>
                        <span id="file-chosen">Select File</span>
                    </div>
                </div>
                <div class="d-flex justify-content-between mt-3">
                    <h5>Documents</h5>
                    <button type="button" class="btn btn-outline-info text-center">Download All</button>
                </div>
                <div class="table-responsive">
                    <table class="table mt-2" id="dtBasicExample">
                        <thead>
                            <tr>
                                <th class="bg-body-secondary" scope="col"><input type="checkbox"></th>
                                <th class="bg-body-secondary" scope="col"></th>
                                <th class="bg-body-secondary" scope="col">Uploder</th>
                                <th class="bg-body-secondary" scope="col">Upload Date</th>
                                <th class="bg-body-secondary" scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var obj in Model.requestwisefiles)
                            {
                                <tr>
                                    <td>
                                        <input type="checkbox">
                                    </td>
                                    <td>
                                        @{
                                            var file = obj.Filename.Split("document\\");
                                        }
                                        @file[1]
                                    </td>
                                    <td>
                                        @Model.requests.FirstOrDefault(u=>u.Requestid == obj.Requestid).Firstname
                                    </td>
                                    <td>
                                        @obj.Createddate
                                    </td>
                                    <td>
                                        <button class="btn btn-outline-info">
                                            <i class="bi bi-cloud-arrow-up"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="profile-tab-pane" role="tabpanel" aria-labelledby="profile-tab" tabindex="0">
        </div>

    </div>
</div>
<script>
    //data table initiate
    $(document).ready(function () {
        $('#dtBasicExample').DataTable({
            info: false,
            ordering: true,
            paging: false,
            searching: false,

        });
    });
</script>