@model Services.ViewModels.EmailLogsModal

<table class="table d-none d-md-table">
    <thead class="table-secondary">
        <tr>
            <th scope="col">Recipient</th>
            <th scope="col">Action</th>
            <th scope="col">Role Name</th>
            <th scope="col">Email Id</th>
            <th scope="col">Created Date</th>
            <th scope="col">Sent Date</th>
            <th scope="col">Sent</th>
            <th scope="col">Sent Tries</th>
            <th scope="col">Confirmation Number</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.emaillogs!.Count() == 0)
        {
            <tr>
                <td colspan="9" class="text-center text-secondary">No Data Found</td>
            </tr>
        }
        @foreach (var obj in Model.emaillogs!)
        {

            <tr>
                <td></td>
                <td>-</td>
                <td>@Model.aspnetrole!.FirstOrDefault(u=>u.Id==obj.Roleid.ToString())!.Name</td>
                <td>@obj.Emailid</td>
                <td>@obj.Createdate</td>
                <td>@obj.Sentdate</td>
                <td>
                    @if (obj.Isemailsent![0] == true)
                    {
                        <span>Yes</span>
                    }
                    else
                    {
                        <span>No</span>
                    }
                </td>
                <td>@obj.Senttries</td>
                <td>-</td>
            </tr>

        }
    </tbody>
</table>
<div class="d-md-none pb-3">
    <div class="accordion accordion-flush" id="accordionFlushExample">
        @if (Model.emaillogs.Count() > 0)
        {
            @foreach (var log in Model.emaillogs)
            {
                <div class="accordion-item">
                    <div class="accordion-header">
                        <div class="accordion-button collapsed d-flex flex-column align-items-start" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapse_@log?.Emaillogid" aria-expanded="false" aria-controls="flush-collapseOne">
                            <p>@log?.Emailid</p>
                            <div>
                                <span class="text-secondary">Action name:</span>
                                <span class="fw-bold">@log?.Subjectname</span>
                            </div>
                        </div>
                    </div>
                    <div id="flush-collapse_@log?.Emaillogid" class="accordion-collapse collapse p-2" data-bs-parent="#accordionFlushExample">
                        <div class="accordion-body px-0 py-2">
                            <div class="d-flex align-items-center mt-2">
                                <i class="fa-solid fa-user fa-sm icn"></i>
                                <span class="text-secondary ms-2">Role Name:</span>
                                <span class="fw-medium ms-2">@Model.aspnetrole!.FirstOrDefault(u=>u.Id==log!.Roleid.ToString())!.Name</span>
                            </div>
                            <div class="d-flex align-items-center mt-2">
                                <i class="fa-solid fa-calendar-days icn"></i>
                                <span class="text-secondary ms-2">Created Date:</span>
                                <span class="fw-medium ms-2">@(log?.Createdate)</span>
                            </div>
                            <div class="d-flex align-items-center mt-2">
                                <i class="fa-solid fa-calendar-days icn"></i>
                                <span class="text-secondary ms-2">Sent Date:</span>
                                <span class="fw-medium ms-2">@(log?.Sentdate)</span>
                            </div>
                            <div class="d-flex align-items-center mt-2">
                                <i class="fa-solid fa-check fa-sm icn"></i>
                                <span class="text-secondary ms-2">Sent:</span>
                                <span class="fw-medium ms-2">@(log?.Isemailsent![0])</span>
                            </div>
                            <div class="d-flex align-items-center mt-2">
                                <i class="fa-solid fa-check fa-sm icn"></i>
                                <span class="text-secondary ms-2">Sent Tries:</span>
                                <span class="fw-medium ms-2">@(log?.Senttries)</span>
                            </div>
                            <div class="d-flex align-items-center mt-2">
                                <i class="fa-solid fa-check fa-sm icn"></i>
                                <span class="text-secondary ms-2">Confirmation Number:</span>
                                <span class="fw-medium ms-2">@(log?.Confirmationnumber ?? "-")</span>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
<div class="d-flex justify-content-center gap-3 mt-3">
    <input type="hidden" id="forcurpage" value="@Model.currentpage" />
    @if (Model.totalpages > 0)
    {
        var previous = Model.currentpage - 1;
        var next = Model.currentpage + 1;
        if (previous <= 0)
        {
            previous = 1;
        }
        if (next > Model.totalpages)
        {
            next = Model.totalpages;
        }
        <button type="button" class="@previous pagebtn" onclick="ChangeEmaillogs(@previous)" style="width:75px">
            Previous
        </button>
        @if (Model.totalpages > 5)
        {
            @if (Model.currentpage > Model.totalpages - 3)
            {
                <button type="button" class="1 pagebtn" id="page-1" onclick="ChangeEmaillogs(1)" style="width:45px">
                    1
                </button>
                <button type="button" class="0 pagebtn" id="page-0" style="width:25px">
                    ...
                </button>
                @for (var i = Model.totalpages - 3; i <= Model.totalpages; i++)
                {
                    <button type="button" class="@i pagebtn" id="page-@i" onclick="ChangeEmaillogs(@i)" style="width:45px">
                        @i
                    </button>
                }
            }
            else if (Model.currentpage < Model.totalpages - 2 && Model.currentpage > 3)
            {
                <button type="button" class="1" pagebtn id="page-1" onclick="ChangeEmaillogs(1)" style="width:45px">
                    1
                </button>
                <button type="button" class="0 pagebtn" id="page-0" style="width:25px">
                    ...
                </button>
                @for (var i = Model.currentpage - 1; i <= Model.currentpage + 1; i++)
                {
                    <button type="button" class="@i pagebtn" id="page-@i" onclick="ChangeEmaillogs(@i)" style="width:45px">
                        @i
                    </button>
                }
                <button type="button" class="0" id="page-0" style="width:45px">
                    ...
                </button>
                <button type="button" class="@Model.totalpages pagebtn" id="page-@Model.totalpages" onclick="ChangeEmaillogs(@previous)" style="width:45px">
                    @Model.totalpages
                </button>
            }
            else
            {
                @for (var i = 1; i <= 4; i++)
                {
                    <button type="button" class="@i pagebtn" id="page-@i" onclick="ChangeEmaillogs(@i)" style="width:45px">
                        @i
                    </button>
                }
                <button type="button" class="0" id="page-0" style="width:45px">
                    ...
                </button>
                <button type="button" class="@Model.totalpages pagebtn" id="page-@Model.totalpages" onclick="ChangeEmaillogs(@Model.totalpages)" style="width:25px">
                    @Model.totalpages
                </button>
            }
        }
        else
        {
            @for (int page = 0; page < Model.totalpages; page++)
            {
                var temp = page + 1;

                <button type="button" class="@temp pagebtn" id="page-@temp" onclick="ChangeEmaillogs(@temp)" style="width:45px">
                    @temp
                </button>
            }
        }
        @if (next == 1 && Model.totalpages > 1)
        {
            next = 2;
        }
        <button type="button" class="@next pagebtn" onclick="ChangeEmaillogs(@next)" style="width:75px">
            Next
        </button>
    }
</div>


<script>
    var num = document.getElementById("curpageinput");
    if (@Model.currentpage == 1) {
        document.getElementById("page-1").style.backgroundColor = "lightblue";
    }
    var page = document.getElementById("page-" + num.value);
    if (page != null) {
        page.style.backgroundColor = "lightblue";
    }
</script>