@model Services.ViewModels.EmailLogsModal

<table class="table">
    <thead class="table-secondary">
        <tr>
            <th scope="col">Recipient</th>
            <th scope="col">Action</th>
            <th scope="col">Role Name</th>
            <th scope="col">Email Id</th>
            <th scope="col">Created Date</th>
            <th scope="col">Sent Date</th>
            <th scope="col">Sent</th>
            <th scope="col">Sent Tries</th>
            <th scope="col">Confirmation Number</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.emaillogs!)
        {

            <tr>
                <td></td>
                <td>-</td>
                <td>@Model.aspnetrole!.FirstOrDefault(u=>u.Id==obj.Roleid.ToString())!.Name</td>
                <td>@obj.Emailid</td>
                <td>@obj.Createdate</td>
                <td>@obj.Sentdate</td>
                <td>
                    @if (obj.Isemailsent![0] == true)
                    {
                        <span>Yes</span>
                    }
                    else
                    {
                        <span>No</span>
                    }
                </td>
                <td>@obj.Senttries</td>
                <td>-</td>
            </tr>

        }
    </tbody>
</table>
<div class="d-flex justify-content-center gap-3 mt-3">
    <input type="hidden" id="forcurpage" value="@Model.currentpage" />
    @if (Model.totalpages > 0)
    {
        var previous = Model.currentpage - 1;
        var next = Model.currentpage + 1;
        if (previous <= 0)
        {
            previous = 1;
        }
        if (next > Model.totalpages)
        {
            next = Model.totalpages;
        }
        <button type="button" class="@previous pagebtn" onclick="ChangeEmaillogs(@previous)" style="width:75px">
            Previous
        </button>
        @if (Model.totalpages > 5)
        {
            @if (Model.currentpage > Model.totalpages - 3)
            {
                <button type="button" class="1 pagebtn" id="page-1" onclick="ChangeEmaillogs(1)" style="width:45px">
                    1
                </button>
                <button type="button" class="0 pagebtn" id="page-0" style="width:25px">
                    ...
                </button>
                @for (var i = Model.totalpages - 3; i <= Model.totalpages; i++)
                {
                    <button type="button" class="@i pagebtn" id="page-@i" onclick="ChangeEmaillogs(@i)" style="width:45px">
                        @i
                    </button>
                }
            }
            else if (Model.currentpage < Model.totalpages - 2 && Model.currentpage > 3)
            {
                <button type="button" class="1" pagebtn id="page-1" onclick="ChangeEmaillogs(1)" style="width:45px">
                    1
                </button>
                <button type="button" class="0 pagebtn" id="page-0" style="width:25px">
                    ...
                </button>
                @for (var i = Model.currentpage - 1; i <= Model.currentpage + 1; i++)
                {
                    <button type="button" class="@i pagebtn" id="page-@i" onclick="ChangeEmaillogs(@i)" style="width:45px">
                        @i
                    </button>
                }
                <button type="button" class="0" id="page-0" style="width:45px">
                    ...
                </button>
                <button type="button" class="@Model.totalpages pagebtn" id="page-@Model.totalpages" onclick="ChangeEmaillogs(@previous)" style="width:45px">
                    @Model.totalpages
                </button>
            }
            else
            {
                @for (var i = 1; i <= 4; i++)
                {
                    <button type="button" class="@i pagebtn" id="page-@i" onclick="ChangeEmaillogs(@i)" style="width:45px">
                        @i
                    </button>
                }
                <button type="button" class="0" id="page-0" style="width:45px">
                    ...
                </button>
                <button type="button" class="@Model.totalpages pagebtn" id="page-@Model.totalpages" onclick="ChangeEmaillogs(@Model.totalpages)" style="width:25px">
                    @Model.totalpages
                </button>
            }
        }
        else
        {
            @for (int page = 0; page < Model.totalpages; page++)
            {
                var temp = page + 1;

                <button type="button" class="@temp pagebtn" id="page-@temp" onclick="ChangeEmaillogs(@temp)" style="width:45px">
                    @temp
                </button>
            }
        }
        @if (next == 1 && Model.totalpages > 1)
        {
            next = 2;
        }
        <button type="button" class="@next pagebtn" onclick="ChangeEmaillogs(@next)" style="width:75px">
            Next
        </button>
    }
</div>

<script>
    var num = document.getElementById("curpageinput");
    if (@Model.currentpage == 1) {
        document.getElementById("page-1").style.backgroundColor = "lightblue";
    }
    var page = document.getElementById("page-" + num.value);
    if (page != null) {
        page.style.backgroundColor = "lightblue";
    }
</script>