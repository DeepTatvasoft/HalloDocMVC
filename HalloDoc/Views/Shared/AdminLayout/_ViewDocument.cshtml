@{
    ViewData["Title"] = "View Document";
    Layout = "";
}
@model Services.ViewModels.AdminviewDoc
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
<Partial name="_Notification" />
<div class="container-fluid mt-5 dashboard" style="width: 90%;">
    <div class="d-flex justify-content-between">
        <h4 class="mt-3 fw-bold">Documents</h4>
        <div class="backbtn" style="cursor:pointer">
            <button type="button" class="btn btn-outline-info text-center backimg"><img style="margin-bottom : 2px" src="~/images/image_2024_01_17T04_17_17_757Z.png" height="12px" width="10px">Back</button>
        </div>
    </div>
    <div class="documenthead mt-4 bg-white lightmode p-3 rounded">
        <span class="text-body-secondary fw-bold">Patient Name</span>
        <h5 class="text-info fw-bold">@Model.Username (@Model.ConfirmationNum)</h5>
        <span class="text-body-secondary">Check here for any files that you and doctors of your subsequents requestors have attached for you to review</span>
        <form enctype="multipart/form-data">
            <input type="hidden" name="@Model.reqid" id="docid">
            <div class="row d-flex">
                <div class="col-12">
                    <div class="form-group rounded d-flex align-items-center justify-content-between uploadbtndiv bg-body-secondary">
                        <div class="px-3 table-responsive">
                            <input type="file" id="actual-btn" asp-for="Upload" multiple hidden />
                            <label role="button" for="actual-btn" id="file-chosen" class="choosenfile text-dark text-nowrap">No item selected</label>
                        </div>
                        <button type="button" class="uploadbtn btn btn-info d-flex ms-1 border-0">
                            <label role="button" class="d-flex align-items-center"><i class="bi bi-cloud-arrow-up p-2"></i><div>Upload</div></label>
                        </button>
                    </div>
                </div>
            </div>
        </form>
        <form method="post" asp-controller="Dashboard" asp-action="DownloadFile">
            <div class="d-flex justify-content-between flex-wrap mt-3 p-2">
                <h5>Documents</h5>
                <div>
                    <button type="submit" class="btn btn-outline-info text-center btn-sm">Download All</button>
                    <button type="button" class="btn btn-outline-info text-center btn-sm" id="DeleteAll">Delete All</button>
                    <button type="button" class="btn btn-outline-info text-center btn-sm" id="SendMail">Send Mail</button>
                </div>
            </div>
            <div class="table-responsive">
                <table class="table mt-2" id="dtBasicExample">
                    <thead>
                        <tr>
                            <th class="bg-body-secondary" scope="col"><input id="chkbox" type="checkbox"></th>
                            <th class="bg-body-secondary" scope="col">Documents</th>
                            <th class="bg-body-secondary" scope="col">Upload Date</th>
                            <th class="bg-body-secondary" scope="col">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.reqfile!.Count() == 0)
                        {
                            <tr>
                                <td colspan="4" class="text-center text-secondary">No Documents Found</td>
                            </tr>
                        }
                        @foreach (var obj in Model.reqfile!)
                        {
                            <tr>
                                <td>
                                    <input type="checkbox" class="childChkbox" id="@obj.Requestwisefileid" name="checklist" value="@obj.Requestwisefileid">
                                </td>
                                <td>
                                    @{
                                        var file = obj.Filename.Split("document\\");
                                    }
                                    @if(file.Length > 1)
                                    {
                                        @file[1]

                                    }
                                    else
                                    {
                                        <span>-</span>
                                    }
                                </td>
                                <td>
                                    @obj.Createddate
                                </td>
                                <td>
                                    <div class="btn btn-outline-info">
                                        <a asp-controller="Dashboard" asp-action="SingleDownload" asp-route-id="@obj.Requestwisefileid">
                                            <i class="bi bi-cloud-arrow-up"></i>
                                        </a>
                                    </div>
                                    <div class="btn btn-outline-info SingleDelete" name="@obj.Requestwisefileid">
                                        <a>
                                            <i class="fa-solid fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </form>

    </div>
</div>




<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
