@model Services.ViewModels.SearchRecordModal


<table class="table">
    <thead class="table-secondary">
        <tr>
            <th scope="col">Patient Name</th>
            <th scope="col">Requestor</th>
            <th scope="col">Date Of Service</th>
            <th scope="col">Close Case Date</th>
            <th scope="col">Email</th>
            <th scope="col">Phone Number</th>
            <th scope="col">Address</th>
            <th scope="col">Zip</th>
            <th scope="col">Request Status</th>
            <th scope="col">Physician</th>
            <th scope="col">Physician Note</th>
            <th scope="col">Cancelled By Provider Note</th>
            <th scope="col">Admin Note</th>
            <th scope="col">Patient Note</th>
            <th scope="col">Delete Permanently</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.req)
        {
            var reqclient = obj.Requestclients.ElementAt(0);
            <tr>
                <td>@reqclient.Firstname @reqclient.Lastname</td>
                <td>@obj.Firstname @obj.Lastname</td>
                <td>
                    @if (@obj.Accepteddate != null)
                    {
                        @obj.Accepteddate.Value.ToString("MMM dd yyyy")
                    }
                    else
                    {
                        <span>-</span>
                    }
                </td>
                <td>
                    @if (obj.Status == 3 || obj.Status == 7 || obj.Status == 8)
                    {
                        @obj.Requeststatuslogs.LastOrDefault(u=>u.Requestid == obj.Requestid).Createddate.ToString("MMM dd yyyy")
                    }
                    else
                    {
                        <span>-</span>
                    }
                </td>
                <td>@reqclient.Email</td>
                <td>@reqclient.Phonenumber</td>
                <td>@reqclient.Address</td>
                <td>@reqclient.Zipcode</td>
                <td>
                    @if (obj.Status == 1)
                    {
                        <span>New</span>
                    }
                    else if (obj.Status == 2)
                    {
                        <span>Pending</span>
                    }
                    else if (obj.Status == 4 || obj.Status == 5)
                    {
                        <span>Active</span>
                    }
                    else if (obj.Status == 6)
                    {
                        <span>Conclude</span>
                    }
                    else if (obj.Status == 3 || obj.Status == 7 || obj.Status == 8)
                    {
                        <span>To-Close</span>
                    }
                    else if(obj.Status == 9)
                    {
                        <span>Unpaid</span>
                    }
                    else
                    {
                        <span>-</span>
                    }
                </td>
                <td>
                    @if(obj.Physician != null)
                    {
                        @obj.Physician.Firstname @obj.Physician.Lastname
                    }
                    else
                    {
                        <span>-</span>
                    }
                </td>
                <td>
                    @if(obj.Requestnotes.Count()>0)
                    {
                        @obj.Requestnotes.ElementAt(0).Physiciannotes
                    }
                    else
                    {
                        <span>-</span>
                    }
                </td>
                <td>
                    @if (obj.Status == 3 || obj.Status == 7 || obj.Status == 8)
                    {
                        @obj.Requeststatuslogs.LastOrDefault(u=>u.Requestid == obj.Requestid).Notes
                    }
                    else
                    {
                        <span>-</span>
                    }
                </td>
                <td>
                    @if (obj.Requestnotes.Count() > 0)
                    {
                        @obj.Requestnotes.ElementAt(0).Adminnotes
                    }
                    else
                    {
                        <span>-</span>
                    }
                </td>
                <td>@reqclient.Notes</td>
                <td>
                    <a asp-action="DeleteSearchRecord" asp-controller="Admin" asp-route-id="@obj.Requestid" class="btn btn-outline-info">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="d-flex justify-content-center gap-3 mt-3">
    <input type="hidden" id="forcurpage" value="@Model.currentpage" />
    @if (Model.totalpages > 0)
    {
        var previous = Model.currentpage - 1;
        var next = Model.currentpage + 1;
        if (previous <= 0)
        {
            previous = 1;
        }
        if (next > Model.totalpages)
        {
            next = Model.totalpages;
        }
        <button type="button" class="@previous pagebtn" onclick="ChangeSearchRecord(@previous)" style="width:75px">
            Previous
        </button>
        @if (Model.totalpages > 5)
        {
            @if (Model.currentpage > Model.totalpages - 3)
            {
                <button type="button" class="1 pagebtn" id="page-1" onclick="ChangeSearchRecord(1)" style="width:45px">
                    1
                </button>
                <button type="button" class="0 pagebtn" id="page-0" style="width:25px">
                    ...
                </button>
                @for (var i = Model.totalpages - 3; i <= Model.totalpages; i++)
                {
                    <button type="button" class="@i pagebtn" id="page-@i" onclick="ChangeSearchRecord(@i)" style="width:45px">
                        @i
                    </button>
                }
            }
            else if (Model.currentpage < Model.totalpages - 2 && Model.currentpage > 3)
            {
                <button type="button" class="1" pagebtn id="page-1" onclick="ChangeSearchRecord(1)" style="width:45px">
                    1
                </button>
                <button type="button" class="0 pagebtn" id="page-0" style="width:25px">
                    ...
                </button>
                @for (var i = Model.currentpage - 1; i <= Model.currentpage + 1; i++)
                {
                    <button type="button" class="@i pagebtn" id="page-@i" onclick="ChangeSearchRecord(@i)" style="width:45px">
                        @i
                    </button>
                }
                <button type="button" class="0" id="page-0" style="width:45px">
                    ...
                </button>
                <button type="button" class="@Model.totalpages pagebtn" id="page-@Model.totalpages" onclick="ChangeSearchRecord(@previous)" style="width:45px">
                    @Model.totalpages
                </button>
            }
            else
            {
                @for (var i = 1; i <= 4; i++)
                {
                    <button type="button" class="@i pagebtn" id="page-@i" onclick="ChangeSearchRecord(@i)" style="width:45px">
                        @i
                    </button>
                }
                <button type="button" class="0" id="page-0" style="width:45px">
                    ...
                </button>
                <button type="button" class="@Model.totalpages pagebtn" id="page-@Model.totalpages" onclick="ChangeSearchRecord(@Model.totalpages)" style="width:25px">
                    @Model.totalpages
                </button>
            }
        }
        else
        {
            @for (int page = 0; page < Model.totalpages; page++)
            {
                var temp = page + 1;

                <button type="button" class="@temp pagebtn" id="page-@temp" onclick="ChangeSearchRecord(@temp)" style="width:45px">
                    @temp
                </button>
            }
        }
        @if (next == 1 && Model.totalpages > 1)
        {
            next = 2;
        }
        <button type="button" class="@next pagebtn" onclick="ChangeSearchRecord(@next)" style="width:75px">
            Next
        </button>
    }
</div>

<script>
    var num = document.getElementById("curpageinput");
    if(@Model.currentpage == 1)
    {
        document.getElementById("page-1").style.backgroundColor = "lightblue";
    }
    var page = document.getElementById("page-"+ num.value);
    if (page != null) {
        page.style.backgroundColor = "lightblue";
    }
</script>