@{
    ViewData["Title"] = "Providers On Call";
    Layout = "AdminLayout/_AdminDashboard";
}
@model Services.ViewModels.Scheduling
<partial name="_Notification" />

<div class="tabnav mt-2 bg-white">
    <div class="collapse show" id="collapseExample">
        <div class="card card-body">
            <ul class="nav nav-tabs d-block d-md-flex" id="myTab" role="tablist" style="box-shadow: 1px 1px 5px;">
                <li class="nav-item" role="presentation">
                    <a class="nav-link" id="home-tab" asp-action="AdminDashboard" asp-controller="Admin">
                        Dashboard
                    </a>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="location-tab" data-bs-toggle="tab" data-bs-target="#location-tab-pane"
                            type="button" role="tab" aria-controls="location-tab-pane" aria-selected="false">
                        Provider Location
                    </button>
                </li>
                <li class="nav-item active" role="presentation">
                    <a class="nav-link" asp-action="Profiletab" asp-controller="Admin">
                        My Profile
                    </a>
                </li>
                <li class="nav-item" role="presentation">
                    <div class="dropdown">
                        <a class="nav-link active dropdown-toggle" asp-action="Providertab" asp-controller="Admin" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Providers
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item nav-link" asp-action="Providertab" asp-controller="Admin">Provider</a></li>
                            <li><a class="dropdown-item nav-link active" asp-action="Scheduling" asp-controller="Admin">Scheduling</a></li>
                            <li><a class="dropdown-item" href="#">Invoicing</a></li>
                        </ul>
                    </div>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="Partners-tab" data-bs-toggle="tab" data-bs-target="#Partners-tab-pane"
                            type="button" role="tab" aria-controls="Partners-tab-pane" aria-selected="false">
                        Partners
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <a class="nav-link" asp-action="AccessTab" asp-controller="Admin">
                        Access
                    </a>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="Records-tab" data-bs-toggle="tab" data-bs-target="#Records-tab-pane"
                            type="button" role="tab" aria-controls="Records-tab-pane" aria-selected="false">
                        Records
                    </button>
                </li>
            </ul>
        </div>
    </div>
</div>

<div class="container-fluid mt-3 mt-lg-5 dashboard shadow p-3 rounded">
    <div class="d-flex justify-content-between">
        <h5 class="mt-1">MDs On Call</h5>
        <div class="backbtn">
            <a asp-controller="Admin" asp-action="Scheduling">
                <button type="button" class="btn btn-outline-info text-center"><img style="margin-bottom : 2px" src="~/images/image_2024_01_17T04_17_17_757Z.png" height="12px" width="10px">Back</button>
            </a>
        </div>
    </div>
    <div class="mt-2 d-flex flex-wrap justify-content-between">
        <select id="suggestions" class="region mb-2" style="padding-left:5px">
            <option>All Region</option>
            @foreach (var obj in Model.regions)
            {
                <option value="@obj.Regionid">@obj.Name</option>
            }
        </select>
        <div class="btns d-flex">
            <button type="button" class="btn btn-info text-white me-1" data-bs-toggle="modal" data-bs-target="#addShiftModal">Calender View</button>
            <button type="button" class="btn btn-info text-white">Shifts For Review</button>
        </div>
    </div>
    <div class="bg-white mt-4">
        <div class="Oncall p-3">
            <h6>MD's On Call</h6>
            <div class="row row-cols-md-3 row-cols-sm-1 row-cols-1 mt-3">
                @foreach (var obj in Model.Phyoncall)
                {
                    @if (obj.Photo == null)
                    {
                        <div class="col mb-3">
                            <div class="d-flex">
                                <i class="fa-solid fa-user fa-xl me-1 mt-1 d-flex justify-content-center align-items-center bg-secondary" style="height:50px;width:50px"></i> @obj.Firstname @obj.Lastname.ElementAt(0).
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="col mb-3">
                            <span class="d-flex">
                                <img class="me-1" src="@obj.Photo" height="50px" width="50px" /> @obj.Firstname @obj.Lastname.ElementAt(0).
                            </span>
                        </div>
                    }

                }
            </div>
        </div>
        <div class="Offduty mt-2 p-3">
            <h6>Physician Off Duty</h6>
            <div class="row row-cols-md-3 row-cols-sm-1 row-cols-1 mt-3">
                @foreach (var obj in Model.Phyoffduty)
                {
                    @if (obj.Photo == null)
                    {
                        <div class="col mb-3">
                            <div class="d-flex">
                                <i class="fa-solid fa-user fa-xl me-1 mt-1 d-flex justify-content-center align-items-center bg-secondary" style="height:50px;width:50px"></i> @obj.Firstname @obj.Lastname.ElementAt(0).
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="col mb-3">
                            <span class="d-flex">
                                <img class="me-1" src="@obj.Photo" height="50px" width="50px" /> @obj.Firstname @obj.Lastname.ElementAt(0).
                            </span>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>
